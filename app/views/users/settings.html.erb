<main>
  <div class="container">
    <div class="row">
      <div class= "col-2"></div>
      <div class= "col-8">
        <h1>User settings page</h1>
        <table>
          <tr>
            <td>No.</td>
            <td>Name</td>
            <td>user_id</td>
            <td>email</td>
            <td>role</td>
            <td>Permission</td>
          </tr>
          <% i = 1%>
          <%@users.each do |user|%>
            <tr>
              <td> <%= i%> </td>
              <td> <%= user.first_name%> <%= user.last_name%>  </td>
              <td> <%= user.id%></td>
              <td> <%= user.email%></td>
              <td> <%= user.role%>   </td>
              <td> <%= link_to "Edit", edit_user_setting_path(user) %></td>
            </tr>
            <%i = i + 1%>
          <%end%>
        </table>

      </div>
      <div class= "col-2"></div>
    </div>
  </div>
</main>
