<main>
  <div class="container">
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <h1>User Setting Page</h1>
        <%=form_for @user, {url: "/users/settings/#{@user.id}", method:"PUT"} do |form|%>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">User Role</span>
            </div>

              <%= form.radio_button(:role, "host") %> <span>Host</span>
              <%= form.radio_button(:role, "traveler") %> <span>Traveler</span>
              <%= form.submit "Submit"%>


          </div>
        <%end%>


      </div>
      <div class="col-4"></div>
    </div>
  </div>
</main>